@model GYMappWeb.ViewModels.TblMemberShipType.SaveTblMemberShipTypeViewModel

@{
    ViewData["Title"] = "Edit Membership Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-floating label {
        color: #495057;
    }

    .btn-dark {
        background-color: #343a40;
        border-color: #343a40;
    }

    .btn-outline-secondary {
        border-color: #6c757d;
    }

    .text-danger {
        font-size: 0.875rem;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white">
                    <h2 class="mb-0">Edit Membership Type</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" id="editMembershipForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        <input type="hidden" asp-for="MemberShipTypesId" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Name" class="form-control" placeholder=" " maxlength="50" required />
                                    <label asp-for="Name" class="form-label">Membership Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="MembershipDuration" class="form-control" placeholder=" "
                                           type="number" min="1" max="12" required />
                                    <label asp-for="MembershipDuration" class="form-label">Duration (months)</label>
                                    <span asp-validation-for="MembershipDuration" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Price" class="form-control" placeholder=" " type="number" step="0.01" min="0" required />
                                    <label asp-for="Price" class="form-label">Price</label>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="invitationCount" class="form-control" placeholder=" " type="number" min="0" required />
                                    <label asp-for="invitationCount" class="form-label">Invitation Count</label>
                                    <span asp-validation-for="invitationCount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="FreezeCount" class="form-control" placeholder=" " type="number" min="0" required />
                                    <label asp-for="FreezeCount" class="form-label">Freeze Count</label>
                                    <span asp-validation-for="FreezeCount" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="TotalFreezeDays" class="form-control" placeholder=" " type="number" min="0" required />
                                    <label asp-for="TotalFreezeDays" class="form-label">Total Freeze Days</label>
                                    <span asp-validation-for="TotalFreezeDays" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Description" class="form-control" maxlength="50" placeholder=" " />
                                    <label asp-for="Description" class="form-label">Description</label>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-dark btn-lg">Save Changes</button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg ms-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Custom validation for MembershipDuration
            $.validator.addMethod("durationRange", function(value, element) {
                var duration = parseInt(value);
                return this.optional(element) || (duration >= 1 && duration <= 12);
            }, "Duration must be between 1 and 12 months.");

            // Initialize form validation
            $("#editMembershipForm").validate({
                rules: {
                    Name: {
                        required: true,
                        maxlength: 50
                    },
                    MembershipDuration: {
                        required: true,
                        number: true,
                        durationRange: true
                    },
                    Price: {
                        required: true,
                        number: true,
                        min: 0
                    },
                    invitationCount: {
                        required: true,
                        digits: true,
                        min: 0
                    },
                    FreezeCount: {
                        required: true,
                        digits: true,
                        min: 0
                    },
                    TotalFreezeDays: {
                        required: true,
                        digits: true,
                        min: 0
                    },
                    Description: {
                        maxlength: 50
                    }
                },
                messages: {
                    Name: {
                        required: "Please enter a membership name",
                        maxlength: "Name cannot exceed 50 characters"
                    },
                    MembershipDuration: {
                        required: "Please enter duration in months",
                        number: "Please enter a valid number",
                        durationRange: "Duration must be between 1 and 12 months"
                    },
                    Price: {
                        required: "Please enter a price",
                        number: "Please enter a valid number",
                        min: "Price cannot be negative"
                    },
                    invitationCount: {
                        required: "Please enter invitation count",
                        digits: "Please enter a whole number",
                        min: "Count cannot be negative"
                    },
                    FreezeCount: {
                        required: "Please enter freeze count",
                        digits: "Please enter a whole number",
                        min: "Count cannot be negative"
                    },
                    TotalFreezeDays: {
                        required: "Please enter total freeze days",
                        digits: "Please enter a whole number",
                        min: "Days cannot be negative"
                    },
                    Description: {
                        maxlength: "Description cannot exceed 50 characters"
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('text-danger');
                    element.closest('.form-floating').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid').removeClass('is-valid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid').addClass('is-valid');
                }
            });
        });
    </script>
}